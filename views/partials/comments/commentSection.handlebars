<div class="text-secondary">
    <ul class="comments rounded">
        {{#each comments}}
        <li>
            <p>{{comment}}</p>
        </li>
        {{/each}}
    </ul>
    <form>
        <div class="form-group">
            <label class="text-primary" for="subPostComment">Leave a comment</label>
            <textarea class="form-control" id="subPostComment" rows="3"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" data-id={{dataValues.id}} id="submitComment" class="btn btn-success">
                Post
            </button>
        </div>
    </form>
</div>